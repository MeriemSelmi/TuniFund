<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_margin="10dp"
    android:weightSum="3">
     <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start a project"
            android:textSize="20dp"
            />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="6" >

	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Name :"
	            android:textSize="17dp"
	            />
	        <EditText 
	            android:id="@+id/projectName"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:hint="Name your project"
	            android:textSize="12dp"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Description :"
	            android:textSize="17dp"
	            />
	        <EditText 
	            android:id="@+id/projectDescription"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:hint="Describe your project"
	            android:textSize="12dp"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Needed amount :"
	            android:textSize="17dp"
	            />
	        <EditText 
	            android:id="@+id/projectAmount"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:hint="How much needed?"
	            android:textSize="12dp"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Country :"
	            android:textSize="17dp"
	            />
	        <EditText 
	            android:id="@+id/projectCountry"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:hint="Project country"
	            android:textSize="12dp"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Days to go :"
	            android:textSize="17dp"
	            />
	        <EditText 
	            android:id="@+id/projectDaysToGo"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:hint="when ?"
	            android:textSize="12dp"
	            />

	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Theme :"
	            android:textSize="17dp"
	            />

	        <Spinner
	            android:id="@+id/projectTheme"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/addProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add project"
            android:onClick="addProject" />

        <Button
            android:id="@+id/cancelProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel" />

    </LinearLayout>
    

</LinearLayout>